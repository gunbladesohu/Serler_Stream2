       <div class="row" style="padding: 5px 0px 5px 0px">
        <div class="fieldLable col-lg-5">
          <label>Affiliation</label>
        </div>
        
        <div class="col-lg-5">
         <input class="form-control" id="affiliation" >
        </div>
      </div>
     
      <div class="row" style="padding: 5px 0px 5px 0px">
