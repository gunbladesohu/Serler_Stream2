<%= content_for :topnavbar do %>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand" style="padding-top:10px;"><img src="<%= asset_path( 'SerlerLogo.png' ) %>" height="35" /></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Search Articles <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to("New Search", new_search_query_path)%>
            </li>
            <li>
              <%= link_to("Saved Queries", "/search_queries/queries_list")%>
            </li>
            <li>
              <%= link_to "Browse Repository", "/search_queries/browse_repository" %>
            </li>
          </ul>
        </li>

        <% if logged_in? %>


            <li class="dropdown" id="menu1">
              <a href="#menu1" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.first_name %> <%= current_user.last_name %>  <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">

                 <% if current_user_role.nil? %>
                     <li>
                      <%= link_to "Log out", logout_path, method: "delete" %>
                    </li>
                 <% else %>
                     <% if current_user_role.name == "Moderator" %>
                      <li>
                        <%= link_to "New articles", article_view_moderator_path, method: "get" %>
                      </li>

                      <li>
                        <%= link_to "My article list", article_moderator_picked_up_path, method: "get" %>
                      </li>

                      <li>
                      <%= link_to "Log out", logout_path, method: "delete" %>
                      </li>
                    <% end %>
                <% end %>



              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
            <li id="registerBtn"><%= link_to "Register", register_path %></li>
            <li id="userNameBlock"><a id="userFullName"></a></li>

        <% end %>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container -->
</nav>
<% end %>

<% content_for :login_content do %>
  <%= content_for?(:content) ? yield(:content) : yield %>
<% end %>
<% content_for :javascript do %>
<script type="text/javascript">
  $(document).ready(function () {
    $('.dropdown-toggle').dropdown();
  });
</script>
<% end %>
<%= render template: "layouts/application" %>
